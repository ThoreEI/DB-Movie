<!DOCTYPE html>
<html>
<head>
    <title>Movies</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../css/templateStyle.css">
    <link href="../css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

{% if app.session.filme is defined %}
    filme: {{ app.session.filme }}
{% endif %}

<h1 class="text-center text-dark"> Movies </h1>
<table class="container justify-content-center table border border-2 border-dark table-bordered align-middle text-center" id="movie-table">
    <thead>
    <tr>
        <form method="post" action="../index.php">
            <th></th>
            <th><input type="submit" value="Title"  name="title"></th>
            <th><input type="submit" value="Producer"  name="producer"></th>
            <th><input type="submit" value="Year" name="year"></th>
            <th><input type="submit" value="Playtime" name="playtime"></th>
            <th><input type="submit" value="FSK" name="fsk"></th>
            <th></th>
        </form>
    </tr>
    </thead>
    <tbody id="tableBody">
    {% for arr in filme %}
        <tr>
            <td> {{ loop.index0 }} </td>
            <td> {{ arr.title }} </td>
            <td> {{ arr.producer }} </td>
            <td> {{ arr.year }} </td>
            <td> {{ arr.playtime }} </td>
            <td> {{ arr.fsk }} </td>
            <td><form method="post"><input type="submit" value="Delete" name="delete" formaction="../index.php?delete={{ loop.index0 }}" ></form></td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<div class="justify-content-center text-center">
    <h3>Add a new movie</h3>

    <form method="post" action="../index.php" id="input-fields-for-new-movie">
        <table class="justify-content-center input-group">
            <tr>
                <td><input type="text" name="title" class="input-field-movie form-control form-control-color w-100" required placeholder="Title"></td>
            </tr>
            <tr>
                <td><input type="text" name="producer" class="input-field-movie form-control form-control-color w-100" pattern="[a-zA-Z]+" required
                           placeholder="Producer"></td>
            </tr>
            <tr>

                <td><input type="text" name="year" class="input-field-movie form-control form-control-color w-100" pattern="[0-9]{4}" required
                           placeholder="Year"></td>
            </tr>
            <tr>
                <td><input type="text" name="playtime" class="input-field-movie form-control form-control-color w-100" pattern="0*[1-9][0-9]*" required
                           placeholder="Playtime"></td>
            </tr>
            <tr>
                <td><input type="text" name="fsk" class="input-field-movie form-control form-control-color w-100" pattern="0|6|12|16|18" required
                           placeholder="FSK"></td>
            </tr>
        </table>
        <input type="submit" name="submitEntry" value="Add Movie" class="btn btn-success">
    </form>

    <form action="../index.php" method="post">
        <input type="submit" value="Delete session" class="btn btn-danger" name="deleteSession">
    </form>

</div>

</body>
</html>